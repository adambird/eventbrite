<h1>Eventbrite calendar connector</h1>
<p>
  Have all of your Eventbrite events appear in your calendar automatically.
</p>
<% unless logged_in? %>
  <p>
    <%= link_to "Connect your calendar", "/auth/cronofy" %>
  </p>
<% else %>
  <p>
    Connected to <%= current_user.email %>
  </p>

  <% unless current_user.eventbrite_credentials? %>

  <p>
    <%= link_to "Connect to Eventbrite", "/auth/eventbrite" %>
  </p>

  <% else %>

  <p>
    Connected to Eventbrite
  </p>
  <ol>
  <% eventbrite_orders.each do |order| %>
    <li><%= link_to "#{order.name} | #{order.start_time} | #{order.end_time}", order.url %></li>
  <% end %>
  </ol>

  <%= button_to 'Synchronize events with your calendar', '/sync' %>
  <%= link_to 'logout', '/logout' %>
  <% end %>

<% end %>